#include <stdio.h>

int main() {
    // Constantes para a quantidade de movimentos de cada peça
    const int BISPO_PASSOS = 5;
    const int TORRE_PASSOS = 5;
    const int RAINHA_PASSOS = 8;

    int i; // Variável auxiliar para loops

    // ---------------- BISPO ----------------
    // O bispo se move na diagonal superior direita (Cima + Direita)
    printf("Movimento do Bispo (diagonal superior direita):\n");
    for (i = 1; i <= BISPO_PASSOS; i++) { // Estrutura de repetição "for"
        printf("Cima\n");
        printf("Direita\n");
    }
    printf("\n");

    // ---------------- TORRE ----------------
    // A torre se move apenas para a direita
    printf("Movimento da Torre (direita):\n");
    i = 1;
    while (i <= TORRE_PASSOS) { // Estrutura de repetição "while"
        printf("Direita\n");
        i++;
    }
    printf("\n");

    // ---------------- RAINHA ----------------
    // A rainha se move apenas para a esquerda
    printf("Movimento da Rainha (esquerda):\n");
    i = 1;
    do { // Estrutura de repetição "do-while"
        printf("Esquerda\n");
        i++;
    } while (i <= RAINHA_PASSOS);

    return 0;
}
